{
    "layer": "top",
    "position": "top",
    "modules-left": ["workspaces", "clock"],
    "modules-center": [],
    "modules-right": ["cpu", "memory", "network", "pulseaudio", "battery"],

    "clock": {
      "format": "{:%H:%M %p}",
      "tooltip": false
    },
    "cpu": {
      "format": "CPU: {usage}%",
      "tooltip": false
    },
    "memory": {
      "format": "RAM: {used:0.1f}G/{total:0.1f}G",
      "tooltip": false
    },
    "network": {
      "format": "📶 {ifname}",
      "tooltip": false
    },
    "pulseaudio": {
      "format": "🔊 {volume}%",
      "tooltip": false
    },
    "battery": {
      "format": "{capacity}% {icon}",
      "tooltip": false,
      "format-icons": ["", "", "", "", ""]
    }
  }
